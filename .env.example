# Application
NODE_ENV=development
PUBLIC_APP_URL=http://localhost:5173
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/openwhistle?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Security & Encryption
JWT_SECRET=change-this-to-a-random-64-character-string
ENCRYPTION_KEY=change-this-to-a-random-32-byte-hex-string
WEBHOOK_SIGNING_SECRET=change-this-to-a-random-32-character-string
SESSION_SECRET=change-this-to-a-random-32-character-string

# File Storage (S3-compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=openwhistle-files
S3_PUBLIC_URL=https://files.openwhistle.org

# Email (SMTP) - Optional
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@openwhistle.org

# External Services - Optional
TELEGRAM_BOT_TOKEN=
DISCORD_CLIENT_ID=
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PUBLIC=10
RATE_LIMIT_AUTHENTICATED=100
